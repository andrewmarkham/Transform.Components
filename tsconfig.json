{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./dist",
      "module": "es6",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "outDir": "./dist",
      "target": "es5",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "lib": [
        "dom", "es2015"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_modules"]
}